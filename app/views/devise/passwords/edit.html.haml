- title 'Change your password'

= form_for resource, as: resource_name, url: password_path(resource_name), html: { :method => :put } do |f|

  = f.hidden_field :reset_password_token

  - errors = resource.errors[:password]
  .form-group{ class: errors.any? ? 'has-error' : nil }
    = f.label :password, 'New password', class: 'control-label'
    = f.password_field :password, autofocus: true, class: 'form-control'
    .help-block= errors.to_sentence if errors.any?

  - errors = resource.errors[:password]
  .form-group{ class: errors.any? ? 'has-error' : nil }
    = f.label :password_confirmation, 'Confirm new password', class: 'control-label'
    = f.password_field :password_confirmation, class: 'form-control'
    .help-block= errors.to_sentence if errors.any?

  .form-group
    = f.submit 'Change my password', class: 'btn btn-block btn-lg btn-primary'
