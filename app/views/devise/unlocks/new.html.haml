- title 'Resend unlock instructions'

.row-fluid.col-sm-12.col-md-12.col-lg-12
  = form_for resource, as: resource_name, url: unlock_path(resource_name), :method => :post do |f|

  - errors = resource.errors[:email]
  .form-group{ class: errors.any? ? 'has-error' : nil }
    = f.label :email, class: 'control-label'
    = f.email_field :email, autofocus: true, class: 'form-control'
  .help-block= errors.to_sentence if errors.any?
    .form-group
      = f.submit 'Resend unlock instructions', class: 'btn btn-block btn-lg btn-success'
