- title 'Sign up'

= form_for resource, as: resource_name, url: registration_path(resource_name) do |f|

  - if resource.errors.any?
    .alert.alert-block.alert-danger
      Could not sign up!

  - errors = resource.errors[:email]
  .form-group{ class: errors.any? ? 'has-error' : nil }
    = f.label :email, class: 'control-label'
    = f.email_field :email, autofocus: true, class: 'form-control'
    .help-block= errors.to_sentence if errors.any?

  - errors = resource.errors[:username]
  .form-group{ class: errors.any? ? 'has-error' : nil }
    = f.label :username, class: 'control-label'
    = f.text_field :username, autofocus: true, class: 'form-control'
    .help-block= errors.to_sentence if errors.any?

  - errors = resource.errors[:password]
  .form-group{ class: errors.any? ? 'has-error' : nil }
    = f.label :password, class: 'control-label'
    = f.password_field :password, class: 'form-control'
    .help-block= errors.to_sentence if errors.any?

  - errors = resource.errors[:password_confirmation]
  .form-group{ class: errors.any? ? 'has-error' : nil }
    = f.label :password_confirmation, class: 'control-label'
    = f.password_field :password_confirmation, class: 'form-control'
    .help-block= errors.to_sentence if errors.any?

  .form-group
    = f.submit 'Sign up', class: 'btn btn-block btn-lg btn-primary'
