.row.col-xs-12
  %h1
    = @play.game.name
    %small
      = time_ago_in_words @play.created_at
      ago

.row.col-xs-12
  %h2
    by
    = @play.user.username

.row.col-xs-12
  %p= sanitize @play.description

.row.col-xs-12
  %h3
    Playing with
    %small
      = pluralize @play.players.count, 'player'

.row.col-xs-12
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th User
    %tbody
      - for player in @play.players
        %tr
          %td= player.username


.row.col-xs-12
  = simple_form_for [@play, @comment] do |f|
    = f.input :body, label: 'Add a new comment'
    = f.submit 'Post comment'

.row.col-xs-12
  %br/

  - @comments.each do |comment|
    - next if comment.author.nil?
    %blockquote
      %p= comment.body

      %footer
        %span.text-danger= comment.author.username

        %span.text-muted
          = time_ago_in_words comment.created_at
          ago
