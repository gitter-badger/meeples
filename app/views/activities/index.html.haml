%row.col-lg-12
  %h1 Activity Stream

.row-fluid.col-sm-12
  %table.table.table-bordered.table-striped.plays
    %thead
      %tr
        %th Username
        %th.col-sm-3 Game
        %th.col-sm-6 Comment
        %th.col-sm-1 Players
        %th.col-sm-2 Played

    - @plays.each do |play|
      %tbody
        %tr.play{ id: dom_id(play) }
          %td= link_to play.user.username, play.user
          %td= play.game.name
          %td= play.description
          %td= play.players.count
          %td
            = link_to play do
              = time_ago_in_words play.created_at
              ago
