.row.col-sm-12
  %h1
    = @user.username

.row.col-sm-12
  %h2 Recent plays

.row.col-sm-12
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th Game
        %th.col-sm-6 Comment
        %th.col-sm-2 Played
        %th.col-sm-2 Rating

    %tbody
      - for play in @user.plays.recent
        %tr.play{ id: dom_id(play) }
          %td= link_to play.game.name, play.game
          %td= play.description
          %td
            = link_to play do
              = time_ago_in_words play.created_at
              ago
          %td= play.rating.to_i
